<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN" "http://mybatis.org/dtd/mybatis-3-config.dtd">

<configuration>
    <settings>
        <setting name="cacheEnabled" value="true"/>
        <setting name="multipleResultSetsEnabled" value="true"/>
        <setting name="useColumnLabel" value="true"/>
        <setting name="defaultStatementTimeout" value="25000"/>
        <setting name="logImpl" value="LOG4J"/>
    </settings>
    <typeAliases>
        <typeAlias alias="itemInfo" type="com.lunshi.matchmaking.domain.ItemInfo"/>
        <typeAlias alias="orderInfo" type="com.lunshi.matchmaking.domain.OrderInfo"/>
    </typeAliases>
    <mappers>
        <mapper resource="sqlmap/ItemInfo.xml"/>
        <mapper resource="sqlmap/OrderInfo.xml"/>
    </mappers>
</configuration>